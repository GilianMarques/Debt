<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCategoria"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/back_circulo_branco"
            android:padding="10dp"
            app:srcCompat="@drawable/vec_receita" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="NomeDespesa"
            android:textAlignment="textStart"
            android:textColor="?attr/appTextPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/vec_valor"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:text="R$1.250,14"
        android:textColor="?attr/appTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvDataPgto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/vec_data"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:text="18 de agosto de 2019"
        android:textColor="?attr/appTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/vec_check"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:text="Em aberto"
        android:textColor="?attr/appTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvParcelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/vec_parcelas"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:text="09/10x"
        android:textColor="?attr/appTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/tvObservacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/vec_observacoes"
        android:drawablePadding="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="10"
        android:padding="8dp"
        android:text="Alguma observação"
        android:textColor="?attr/appTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
         />

    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineChart"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEditar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/vec_editar" />

        <ImageView
            android:id="@+id/ivPagar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/vec_check" />

        <ImageView
            android:id="@+id/ivRemover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/vec_remover" />


    </LinearLayout>


</LinearLayout>