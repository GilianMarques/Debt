<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        app:cardBackgroundColor="?attr/appCardBackground"
        app:cardCornerRadius="@dimen/app_card_raio"
        app:cardElevation="@dimen/app_card_elevation">

        <TextView
            android:id="@+id/tvNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/vec_add"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:padding="8sp"
            android:text="@string/Novanota"
            android:textAlignment="gravity"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>
</LinearLayout>