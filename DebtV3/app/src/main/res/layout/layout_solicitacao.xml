<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/centro"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAceitar"
        fontPath="ProductSansBold"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_edittext_fundo"
        android:drawableEnd="@drawable/vec_check_branco"
        android:drawablePadding="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/Aceitar"
        android:textColor="@color/branco"
        app:layout_constraintEnd_toStartOf="@id/centro"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btnRemover"
        fontPath="ProductSansBold"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/back_edittext_contorno"
        android:drawableEnd="@drawable/vec_remover"
        android:drawablePadding="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/Remover"
        android:textColor="?colorPrimary"
        app:layout_constraintStart_toEndOf="@id/centro"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/ivFotoDePerfil"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/back_circulo_grande_branco"
        android:elevation="5dp"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvNomeUsuario"
        fontPath="ProductSansBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:text="Nome do usuario"
        android:textAlignment="center"
        android:textColor="?appTextPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivFotoDePerfil"
        app:layout_constraintTop_toTopOf="@id/ivFotoDePerfil"
        tools:ignore="HardcodedText,MissingPrefix" />

    <TextView
        android:id="@+id/tvEmail"
        fontPath="ProductSansBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:paddingBottom="4dp"
        android:text="email"
        android:textAlignment="center"
        android:textColor="?appTextSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivFotoDePerfil"
        app:layout_constraintTop_toBottomOf="@id/tvNomeUsuario"
        tools:ignore="HardcodedText,MissingPrefix" />
</androidx.constraintlayout.widget.ConstraintLayout>